<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@null"
        android:src="@drawable/login_friend"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/main_email"
        android:background="@drawable/btn_lightgray"
        android:hint="E-Mail"
        android:paddingStart="14dp"
        android:layout_marginBottom="20dp"
        />


    <EditText
        android:inputType="textPassword"
        android:id="@+id/main_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingStart="14dp"
        android:background="@drawable/btn_lightgray"
        android:hint="Password" />

    <RelativeLayout
        android:id="@+id/RelativeLayout_login"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/btn_pastelblue"
        >

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/btn_find"
            android:layout_marginLeft="40dp"
            android:background="@drawable/btn_cloudy"
            android:layout_marginTop="18dp"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="비밀번호 찾기"
            android:textColor="@color/colorBlack"
            android:layout_weight="5"/>

        <TextView
            android:id="@+id/btn_signUp_join"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_cloudy"
            android:layout_marginTop="18dp"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@android:color/black"
            android:layout_weight="4"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_report"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="문의"
        android:textSize="20dp"
        android:background="@drawable/btn_lightgray"
        android:layout_gravity="right">
    </Button>

</LinearLayout>