<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/user"
            ></ImageView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="#70000000"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        >

        <Button
            android:id="@+id/btn_capture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_btn"
            android:gravity="center"
            android:text="프로필 사진 변경"
            android:textColor="#ffffff"
            android:textSize="15dp"></Button>
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="16dp"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을 입력해주세요."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="나이"
            android:textColor="#000000"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/add_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="나이를 입력해주세요."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="학과"
            android:textColor="#000000"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/add_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="학과를 입력해주세요."
            />
        <RadioGroup
            android:id="@+id/add_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingRight="20dp"
                ></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                android:textColor="#000000"
                android:textSize="20dp"
                ></RadioButton>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff">

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_pink"
                android:gravity="center"
                android:text="로그아웃"/>

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_pink"
                android:gravity="center"
                android:text="회원탈퇴"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/profile_image">
        </ImageView>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/add_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EBC1FB"
            android:text="저장하기"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></Button>
    </RelativeLayout>

</LinearLayout>